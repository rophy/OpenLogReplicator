{
  "version": "1.9.0",
  "memory": {
    "min-mb": 64,
    "max-mb": 1024
  },
  "source": [
    {
      "alias": "SOURCE",
      "name": "DBNAME",
      "reader": {
        "type": "offline",
        "path-mapping": ["/db/fra", "/opt/fast-recovery-area"]
      },
      "format": {
        "type": "json"
      },
      "filter": {
        "table": [
          {"owner": "OWNER1", "table": "TABLENAME1", "key": "COL1,COL2,COL3"},
          {"owner": "OWNER1", "table": "TABLENAME2"},
          {"owner": "OWNER2", "table": "TAB.*"}
        ]
      }
    }
  ],
  "target": [
    {
      "alias": "KAFKA",
      "source": "SOURCE",
      "writer": {
        "type": "kafka",
        "topic": "TOPIC",
        "brokers": "localhost:9092"
      }
    }
  ]
}
